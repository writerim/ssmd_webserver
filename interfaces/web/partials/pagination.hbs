<script type='text/template' id='pagination_tpl'>
    <% if(center.length){ %> 
        <div class="btn-group mr-2" role="group" aria-label="Second group">
            <button type="button" class="btn btn-secondary prev"> < </button>
            <% _.each(center, function(page){ %> 
                <button type="button" class="btn btn-secondary <%= page.is_active ? 'active' : '' %> pagination_number"
                    data-page="<%= page.number %>">
                    <%= page.number %>
                </button>
            <% }) %>
            <button type="button" class="btn btn-secondary next"> > </button>
        </div>
    <% } %>
</script>