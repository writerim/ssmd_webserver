<script type='text/template' id='modal_lastdata_tpl'>
   <div class="modal fade bs-example-modal-lg show" tabindex="-1" role="dialog" 
   style="display: block; padding-right: 17px;background: #0909094f;" aria-modal="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel"><%= modal_title %></h4>
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                                                                                                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Устройство с которого получили данные 
                            <span class="required">*</span>                        </label>
                                                                                                            <div class="col-md-9 col-sm-9 ">
                            <select 
                                id="modal_lastdata_deviceid" 
                                class="form-control" 
                                required="required"                            >
                                <option value="0">--Выбрать--</option>
                            </select>
                            </div>
                                                                </div>
                                                        <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Параметр по которому записали данные 
                            <span class="required">*</span>                        </label>
                                                                                                            <div class="col-md-9 col-sm-9 ">
                            <select 
                                id="modal_lastdata_parameterid" 
                                class="form-control" 
                                required="required"                            >
                                <option value="0">--Выбрать--</option>
                            </select>
                            </div>
                                                                </div>
                                                        <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Данные которые мы записали 
                            <span class="required">*</span>                        </label>
                                            <textarea id="modal_lastdata_data" 
                            required="required"                             class="form-control" name="message" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
                                        </div>
                                                        <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">Время когда записали данные 
                            <span class="required">*</span>                        </label>
                                            <div class="col-md-9 col-sm-9 ">
                            <input class="date-picker form-control" 
                            required="required"                            placeholder="dd-mm-yyyy" type="date" 
                            id="modal_lastdata_date" 
                            >
                        </div>
                                        </div>
                                
                </div>
                <div class="modal-footer" id="buttons"> asas</div>
            </div>
        </div>
    </div>
</script>